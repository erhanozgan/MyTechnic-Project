@model myTechnicCase.Application.Dtos.Team.TeamCreateDto
@{
    ViewData["Title"] = "Team Create";
}
<div class="row">
    <div class="col-xxl-12">
        <!--begin::Tables Widget 9-->
        <div class="card card-xxl-stretch mb-5 mb-xl-8">
            <!--begin::Header-->
            <div class="card-header border-0 pt-5">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label fw-bolder fs-3 mb-1">Team Create</span>
                </h3>
            </div>
            <!--end::Header-->
            <!--begin::Body-->
            <div class="card-body">
                <!--begin::Table container-->
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-5 col-lg-9">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupervisorPersonnelId" class="col-lg-3 col-form-label">Add Supervisor Personnel</label>
                        <div class="col-lg-9">
                            <select class="form-select" asp-for="SupervisorPersonnelId" asp-items="Model.Personnels">
                                <option value="">Select</option>
                            </select>
                            <span asp-validation-for="Personnels" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PersonnelsId" class="col-lg-3 col-form-label">Please Add Personnels</label>
                        <div class="col-lg-9">
                            <select class="select col-md-6" asp-for="PersonnelsId" asp-items="Model.Personnels" multiple>
                            </select>
                            <span asp-validation-for="PersonnelsId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-10 form-check">
                    </div>
                    <a class="btn btn-secondary mr-2" asp-action="Index"><i class="fa fa-arrow-left"></i> Back To Team List</a>  
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Save Changes</button>
                </form>
                <!--end::Table container-->
            </div>
            <!--begin::Body-->
        </div>
        <!--end::Tables Widget 9-->
    </div>
</div>

@section Scripts
{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script >
    $(document).ready(function() {
        
        $('.select').select2({
        });
    });
    
    </script>
}