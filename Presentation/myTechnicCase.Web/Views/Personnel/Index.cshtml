@model IEnumerable<myTechnicCase.Application.Dtos.Personnel.PersonnelListDto>
@{
	ViewData["Title"] = "Personnel List";
}
<div class="row">
	<div class="col-xxl-12">
		<div class="card card-xxl-stretch mb-5 mb-xl-8">
			<div class="card-header border-0 pt-5">
				<h3 class="card-title align-items-start flex-column">
					<span class="card-label fw-bolder fs-3 mb-1">Personnel List</span>
				</h3>
				<div class="card-toolbar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover" title="">
					<a asp-action="Create" class="btn btn-success float-end ml-5">
						<i class="fa fa-plus"></i>	Create Personnel
					</a>
				</div>
			</div>
			<div class="card-body py-3">
				<table class="table table-striped table-row-bordered gy-5 gs-7 dt-init">
					<thead>
						<tr class="fw-bolder fs-6 text-gray-700">
							<th></th>
							<th>
								@Html.DisplayNameFor(model => model.PersonnelCode)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Name)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Surname)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.UserName)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Email)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Phone)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Address)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Title)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.TeamName)
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<a asp-action="Update" asp-route-id="@item.Id" data-toggle="tooltip" title="Update"><i class="fas fa-pencil-alt text-success" style="font-size:1.5rem"></i> </a>
									<a asp-action="Delete" asp-route-id="@item.Id" data-toggle="tooltip" title="Delete"><i class="far fa-trash-alt text-danger ml-2" style="font-size:1.5rem"></i> </a>
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.PersonnelCode)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Name)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Surname)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.UserName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Email)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Phone)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Address)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Title)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.TeamName)
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script>
		$('document').ready(function () {
			InitDatatables();
		})
	</script>
}